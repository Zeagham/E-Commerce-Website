                <div class="form-group">
                    <label for="email">Title of Product</label>
                    <input type="text" name="title" value="{{s.title}}" class="form-control"  required>
                </div>
                <div class="form-group">
                    <label for="password">Description of Product</label>
                    <input type="text"  value ="{{s.description}}"name="description" class="form-control"  required>
                </div>

                <div class="form-group">
                    <label for="password">Price of Product</label>
                    <input type="number" value = "{{s.price}}" name="price" class="form-control"  required>
